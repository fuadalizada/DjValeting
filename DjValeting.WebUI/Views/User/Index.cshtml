@model BookingFormList

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User</h1>
@section Styles
    {
    <link href="~/shared/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/shared/jquery.form/jquery.form.js"></script>
    <script src="~/shared/bootstrap-daterangepicker/moment.min.js"></script>
    <script src="~/customscripts/userformjs.js"></script>
}
<form id="ClientForm">
    <div class="row">
        <div class="col-sm-4 col-xl-3">
            <label class="title">Name</label>
            <input type="text" value="" class="form-control Name" />
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-sm-4 col-xl-3 col-md-offset-4 col-md-2">
            <label class="title">Email Address</label>
            <input type="email" class="form-control email" />
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-sm-4 col-xl-2">
            <label class="title">Booking Date</label>
            <div class="input-group date" id="createDate" data-target-input="nearest">
                <input type="text" class="form-control datetimepicker-input" name="createDate" data-target="#createDate" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                <div class="input-group-append" data-target="#createDate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 col-xl-3 col-md-offset-3 col-md-2">
            <label class="title">Contact Number</label>
            <input type="text" class="form-control contact" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-sm-4 col-xl-2">
            <label class="title">Flexibility</label>
            <select id="flexibilityId" name="Flexibility" class="select">
                @foreach (var item in Model.FlexibilityDtos)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-sm-4 col-xl-2">
            <label class="title">Vehicle Size</label>
            <select id="vehicleSizeId" name="VehicleSize" class="select">
                @foreach (var item in Model.VehicleSizeDtos)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>


    <div class="row mt-1">
        <div class="col-12  text-left" style="margin-left: inherit">
            <button type="button" id="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>